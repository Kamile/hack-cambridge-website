warning-style() {
  display: inline-block;
  padding: 0 5px;
  border-radius: 2px;
  color: white;
}
.warning {
  warning-style();
  background: #FD8739;
}
.success {
  warning-style();
  background: #6CD82F
}
.error {
  warning-style();
  background: #D00004
}

.logged-in {
  padding: 10px;
  background: $colorSecondary;
  color: white;
}