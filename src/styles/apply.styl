/* ==========================================================================
   Apply Section
   ========================================================================== */
.dashboard-section {
  border-bottom: 2px solid darken($backgroundColor, 15%);
  padding: 10px;
  margin-bottom: 10px;
  text-align: left;
}
.logged-in {
  padding: 10px;
  background: $colorSecondary;
  color: white;
}
.status-message {
  display: inline-block;
  padding: 10px 20px;
  border-radius: 5px;
  text-align: center;
  margin-bottom: 15px;
}
.status-message.success {
  border: 2px solid $colorSuccess;
}
.status-message.warning {
  border: 2px solid $colorWarning;
}
.status-message.neutral {
  border: 2px solid $colorNeutral;
}
.status-message h2 {
  margin-bottom: 0;
}
.status-message span {
  color: $gray;
}