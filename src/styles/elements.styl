warning-style() {
  display: inline-block;
  padding: 0 5px;
  border-radius: 2px;
  color: white;
}
span.warning {
  warning-style();
  background: #FD8739;
}
span.success {
  warning-style();
  background: #6CD82F
}
span.error {
  warning-style();
  background: #D00004
}
span.na {
  warning-style();
  background: #B1AFB2
}