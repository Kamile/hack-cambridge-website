/* Universal Stuff
   ========================================================================== */

body {
  width: 100%;
  height: 100%;

  font-family: $fontFamily;
  font-size: 16px;
  line-height: 1.2;
  color: $textColor;

  background-color: $backgroundColor;
}

html {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}

main-background() {
  background-image: radial-gradient(circle at top center, $backgroundColor 0%, darken($backgroundColor, 5%) 100%);
}

dark-background() {
  background-image: radial-gradient(circle at top center, #323647 0%, #323647 100%);
}

.clearfix {
  &::after {
    content: '';
    display: table;
    clear: both;
  }
}

.content-wrapper {
  box-sizing: border-box;
  width: 800px;
  max-width: 100%;
  padding-left: ($punit);
  padding-right: ($punit);

  @media only screen and (min-width: 500px) {
    padding-left: ($punit * 3);
    padding-right: ($punit * 3);
  }
}

.content-wrapper-thin {
  box-sizing: border-box;
  width: 600px;
  max-width: 100%;
  padding-left: ($punit);
  padding-right: ($punit);

  @media only screen and (min-width: 500px) {
    padding-left: ($punit * 3);
    padding-right: ($punit * 3);
  }
}

/* Typography
   ========================================================================== */

margin-element() {
  margin-top: 1em;
  margin-bottom: 10px;

  &:first-child {
    margin-top: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

h1, h2, h3, h4, h5, h6, ul, ol, li, p {
  margin-element();
}

h1, .grand-heading {
  margin-bottom: 40px;
  font-size: 2em;

  @media only screen and (min-width: 600px) {
    font-size: 3em;
  }
}

h1, h2, h3, .grand-heading {
  font-weight: 300;
}

a, a:visited {
  color: $colorSecondary;
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }
}

/* Default layout
   ========================================================================== */

.default-header {
  margin-top: ($punit * 4);
  margin-bottom: ($punit * 2);

  .header-link svg {
    width: 100%;
    max-width: 250px;
    height: auto;
  }
}

.default-main {
  margin: ($punit * 2) 0;
}

.default-footer {
  margin: ($punit * 2) 0;
  font-size: 0.9em;
  color: $gray;
}
