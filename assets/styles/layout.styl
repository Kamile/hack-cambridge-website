/* Universal Stuff
   ========================================================================== */

body {
  width: 100%;
  height: 100%;

  font-family: $fontFamily;
  font-size: 16px;
  line-height: 1.2;
  color: $textColor;

  background-color: $backgroundColor;
}

html {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}
