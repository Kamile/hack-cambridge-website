/* Landing block
   ========================================================================== */

.landing-intro-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;

  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: ($punit * 3);

  background: radial-gradient(circle at top center, $backgroundColor 0%, darken($backgroundColor, 5%) 100%);
  color: $colorSecondary;
}

.landing-intro-content {
  width: 100%;
}

.landing-intro-dates {
  margin-bottom: ($punit * 4);
}

.landing-intro-logo {
  width: 100%;
  max-width: 400px;
  height: auto;
}

.landing-intro-subscribe-form {
  width: 100%;
  max-width: 500px;
  display: flex;
  border-bottom: 2px solid $grayLighter;
  padding-bottom: 5px;
}

.subscribe-form-email {
  flex: 1 1 auto;
  background: transparent;
  border: none;
}

.subscribe-form-submit {
  flex: 0 1 auto;
  background: transparent;
  border: none;
}

.landing-intro-social-links {
  list-style: none;
  padding: 0;

  li {
    padding: 10px 0;
    margin: 0;
  }

  svg {
    width: 20px;
    fill: darken($backgroundColor, 20%);
    vertical-align: bottom;
    position: absolute;
    left: 0;
    bottom: 0;
  }

  a {
    color: currentColor;
    text-decoration: none;
    position: relative;
    padding-left: 30px;

    &:hover {
      svg {
        fill: currentColor;
      }

      .social-link-text {
        text-decoration: underline;
      }
    }
  }
}
