/* Landing block
   ========================================================================== */

.landing-intro-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;

  box-sizing: border-box;
  width: 100%;
  min-height: 100%;
  padding: ($punit * 3) ($punit);

  background: radial-gradient(circle at top center, $backgroundColor 0%, darken($backgroundColor, 5%) 100%);
  color: $colorSecondary;
  font-weight: 300;

  @media only screen and (min-width: 500px) {
    padding: ($punit * 3);
  }
}



.landing-intro-content {
  width: 100%;
}

.landing-intro-dates {
  margin-bottom: ($punit * 4);
}

.landing-intro-logo {
  width: 100%;
  max-width: 400px;
  height: auto;
}

.subscribe-form-output {
  padding-top: 10px;
  margin: 0;
}

.landing-intro-subscribe-form {
  width: 100%;
  max-width: 500px;
}

/* Subscribe Form
   ========================================================================== */

.subscribe-form-input-container {
  display: flex;
  position: relative;
  padding-bottom: 7px;
}

.subscribe-form-underbar {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;

  display: block;
  height: 2px;

  background: $grayLighter;

  transition: background 0.2s;

  .subscribe-form-email:focus ~ & {
    background: $colorPrimary;
  }
}

.subscribe-form-email {
  flex: 1 1 auto;
  background: transparent;
  border: none;
  font-size: 1.2em;
  box-shadow: none;
  min-width: 0;

  &:focus {
    outline: none;
    box-shadow: none;
  }

  &::placeholder {
    opacity: 1;
    color: $grayLighter;
  }
}

.subscribe-form-submit {
  flex: 0 0 auto;
  background: transparent;
  border: none;

  color: $gray;

  transition-property: color transform;
  transition-duration: 0.2s;

  &:hover, &:focus {
    color: $colorPrimary;
    outline: none;
  }

  &:active {
    transform: translate(0, 5px);
  }
}

/* Intro animation
   ========================================================================== */

.landing-intro-section {

  .hack-logo-cambridge-text {
    for $num in (1..9) {
      path:nth-child({$num}) {
        animation: logoAnimateIn;
        animation-delay: (1 + $num * 0.1)s
        animation-duration: 2s;
        animation-fill-mode: both;
      }
    }
  }
}

.landing-intro-logo ~ * {
  animation: fadeIn;
  animation-duration: 2s;
  animation-delay: 2.5s;
  animation-fill-mode: both;
}

@keyframes logoAnimateIn {
  0% { opacity: 0; fill $colorPrimary; }
  20% { fill: $colorPrimary; }
  25% { opacity: 1; }
  50% { fill: #B72CD6; }
  70% { fill: #000; }
  100% { opacity: 1; }
}

@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.landing-intro-social-links {
  list-style: none;
  padding: 0;

  li {
    padding: 10px 0;
    margin: 0;
  }

  svg {
    width: 20px;
    fill: darken($backgroundColor, 20%);
    vertical-align: bottom;
    position: absolute;
    left: 0;
    bottom: 0;
  }

  a {
    color: currentColor;
    text-decoration: none;
    position: relative;
    padding-left: 30px;

    &:hover {
      svg {
        fill: currentColor;
      }

      .social-link-text {
        text-decoration: underline;
      }
    }
  }
}
